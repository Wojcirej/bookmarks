<%= form_with(model: @link, url: _category_links_path(@category), local: true) do |form| %>
  <h2>Add new link to '<%= @category.name %>' category</h2>
  <div class="row">
    <div class="col-4">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="col-8">
      <div class="form-group">
        <%= form.label :url %>
        <%= form.text_field :url, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", rows: 8 %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit 'Create new link', class: 'btn btn-primary', value: 'Submit' %>
  </div>
<% end %>